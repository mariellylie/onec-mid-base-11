	// Конец СтандартныеПодсистемы.ПодключаемыеКоманды
	
	// {{ Савельева М.А. 26.05.2025
	ГруппаСкидка = Элементы.Вставить(
		"ДО_ГруппаСкидка",
		Тип("ГруппаФормы"),
		Элементы.ГруппаШапкаЛево);
		
	ГруппаСкидка.Вид = ВидГруппыФормы.ОбычнаяГруппа;
		
	ПолеСогласованнаяСкидка = Элементы.Добавить(
		"ДО_СогласованнаяСкидка",
		Тип("ПолеФормы"),
		Элементы.ДО_ГруппаСкидка);
		
	Элементы.ДО_СогласованнаяСкидка.ПутьКДанным = "Объект.ДО_СогласованнаяСкидка";
	Элементы.ДО_СогласованнаяСкидка.Вид = ВидПоляФормы.ПолеВвода;
	Элементы.ДО_СогласованнаяСкидка.УстановитьДействие("ПриИзменении", "ДО_ДО_СогласованнаяСкидкаПриИзмененииПосле");
	
	КомандаПересчитать = ЭтаФорма.Команды.Добавить("ДО_Пересчитать");
	КомандаПересчитать.Заголовок = "Пересчитать (ДО)";
	КомандаПересчитать.Действие = "ДО_ПересчитатьТабличнуюЧасть";
	
	НовыйЭлемент = ЭтаФорма.Элементы.Добавить("ДО_Пересчитать", Тип("КнопкаФормы"), Элементы.ДО_ГруппаСкидка);
	НовыйЭлемент.Заголовок = "Пересчитать (ДО)";
	НовыйЭлемент.ИмяКоманды = "ДО_Пересчитать";
	// }} Савельева М.А.
	
КонецПроцедуры

